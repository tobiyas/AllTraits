<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.tobiyas.RacesAndClassesTraits</groupId>
	<artifactId>PermanentPotionTrait</artifactId>
	<version>1</version>

	<properties>
		<utilsVersion>1.0.12</utilsVersion>
		<utilsAddition>RaC</utilsAddition>
	</properties>
	
	<!-- Repos -->
	<repositories>
		<repository>
			<id>org.bukkit</id>
			<url>http://repo.bukkit.org/content/groups/public</url>
		</repository>
	</repositories>

	<dependencies>
		<!-- Depends from RacesAndClasses -->
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>RacesAndClasses</artifactId>
			<version>1.1.9-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>

		<!-- Depends from Bukkit -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.8.8-R0.1-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>

		<!-- Depends from tobiyas's Utils -->
		<dependency>
			<groupId>de.tobiyas</groupId>
			<artifactId>Utils</artifactId>
			<version>1.0.14</version>
			<optional>true</optional>
		</dependency>
	</dependencies>


	<!-- Building -->
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>

			<!-- Maven build plugin to specify to use java 6 -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<!-- We need to build with Java 6 to be compatible to old servers. -->
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	<!-- Pushing to Maven -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-alpha-6</version>
			</extension>
		</extensions>
	</build>

	<distributionManagement>
		<repository>
			<id>tobiyas-maven</id>
			<url>file:///D:/Dropbox/Ã–ffentlich/maven</url>
		</repository>
	</distributionManagement>
</project>
